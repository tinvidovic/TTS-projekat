<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ba.unsa.etf.tin.zavrsnirad.ShareSettingsActivity">

    <Button
        android:id="@+id/button_PretraziUredjaje"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Pretraži uređaje"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />


    <Button
        android:id="@+id/button_BudiVidljiv"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Budi vidljiv"
        android:textColor="@android:color/black"
        android:textColorLink="@android:color/holo_blue_dark"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button_PretraziUredjaje"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/button_PretraziUredjaje"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/button_PretraziUredjaje"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/button_PosaljiKonfiguraciju"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:text="Pošalji konfiguraciju"
        android:textColor="@android:color/black"
        android:textColorLink="@android:color/holo_blue_dark"
        app:layout_constraintLeft_toLeftOf="@+id/button_PretraziUredjaje"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button_BudiVidljiv"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/button_PretraziUredjaje"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textView_Bluetooth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/bluetoothActivity_text"
        android:textAlignment="center"
        android:textStyle="italic"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/button_PretraziUredjaje"
        app:layout_constraintRight_toRightOf="@+id/button_BudiVidljiv"
        app:layout_constraintTop_toBottomOf="@+id/button_PosaljiKonfiguraciju"
        android:layout_marginRight="8dp" />

    <ListView
        android:id="@+id/listView_BluetoothDevices"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/textView_Bluetooth"
        app:layout_constraintRight_toRightOf="@+id/textView_Bluetooth"
        app:layout_constraintTop_toBottomOf="@+id/textView_Bluetooth"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>
